@model IEnumerable<Item>
 

<div class="container p-4">
    <div class="row pb-3">
        <div class="col-6">
            <h2 class="text-primary">List of Items</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Create" asp-controller="ItemList"> Create new Items </a>
        </div>
    </div>
</div>


<table id="myTable" class="table table-boardered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Item ID
            </th>
            <th>
                Item Name
            </th>
            <th>
                Price
            </th>
           
            <th>
                Action
            </th>

        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td width="10%">
                @item.Id
            </td>
            <td width="40%">
                @item.Name
            </td>
            <td width="30%">
                @item.Price
            </td>
            <td width="20%">
                <a asp-controller="ItemList" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a>|</a>
                
                    <a asp-controller="ItemList" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>


        </tr>
        }
    </tbody>



</table>

